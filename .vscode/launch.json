  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug serverless offline",
      "program": "/usr/local/bin/serverless",
      "args": ["offline", "start", "--skipCacheInvalidation"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "jest parser",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["parser.test.js"]
    }
  ]
}
